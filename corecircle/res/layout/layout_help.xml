<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/lh_linearLayout1" android:layout_width="fill_parent"
		android:layout_weight="6">
		<ImageView android:src="@drawable/hp" android:layout_height="fill_parent"
			android:layout_width="fill_parent" android:id="@+id/lh_imageView1">
		</ImageView>
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/lh_linearLayout2" android:layout_width="fill_parent"
		android:layout_weight="0">
		<Button android:text="后退" android:id="@+id/lh_button1"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1">
		</Button>
		<Button android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:text="退出" android:id="@+id/lh_button3"
			android:layout_weight="1">
		</Button>
		<Button android:text="前进" android:id="@+id/lh_button2"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1">
		</Button>
	</LinearLayout>
</LinearLayout>
