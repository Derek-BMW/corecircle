<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/lead">
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="match_parent" android:id="@+id/lcs_linearLayout1"
		android:orientation="horizontal">
		<TextView android:text="Q:欢迎进入引导界面，我们将协助您选出属于您自己的核心圈"
			android:id="@+id/lcs_textView1" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_weight="1"></TextView>
	</LinearLayout>

	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="match_parent" android:id="@+id/lcs_linearLayout3"
		android:layout_weight="6" android:orientation="horizontal">

		<ListView android:layout_height="wrap_content"
			android:layout_width="match_parent" android:id="@+id/lcs_listView1"
			android:cacheColorHint="@android:color/transparent"></ListView>
	</LinearLayout>
	<LinearLayout android:id="@+id/lcs_linearLayout2"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:layout_weight="1">
		<Button android:layout_width="wrap_content" android:text="上一步"
			android:layout_weight="1" android:id="@+id/lcs_button1"
			android:layout_height="wrap_content"></Button>
		<Button android:layout_width="wrap_content" android:text="完成"
			android:layout_weight="1" android:id="@+id/lcs_button3"
			android:layout_height="wrap_content"></Button>

		<Button android:layout_width="wrap_content" android:text="下一步"
			android:layout_weight="1" android:id="@+id/lcs_button2"
			android:layout_height="wrap_content"></Button>
	</LinearLayout>


</LinearLayout>